<TABLE BORDER="1">
    <CAPTION> Liste des classes que vous pouvez quitter </CAPTION>
    <TR>
        <TH> Nom de la Classe </TH>
        <TH> Description de la Classe </TH>
        <TH> Quitter la Classe </TH>
    </TR>
    {% for list in classroom_list %}
        <TR>
            <TD> {{ list.classname }} </TD>
            <TD> {{ list.description }} </TD>
            <TD>
                <a href="{{ path('user_student_quit_classroom', { 'classId': list.id }) }}">
                    <input type="submit" value="Quitter la Classe"/>
                </a>

            </TD>
        </TR>
    {% endfor %}
</TABLE>